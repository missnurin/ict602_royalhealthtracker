<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ROYALCARE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/my_light_primary</item>
        <item name="colorPrimary">@color/my_light_secondary</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:itemTextAppearance">@style/PopupMenuStyle</item>

        <item name = "actionOverflowButtonStyle">@style/threeDotColor</item>


    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define a style for the AlertDialog with black text -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Define a style for the AlertDialog with black text -->
    <style name="manual_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/my_light_primary</item>
    </style>


    <!-- Define a style for the "OK" button in the AlertDialog with an orange text color -->
    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Customize the attributes as per your requirements -->
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <!-- Customize the attributes as per your requirements -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define toolbar style -->
    <style name="threeDotColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/white</item> <!-- Set icon tint to white -->
    </style>




    <style name="Theme.ROYALCARE" parent="Base.Theme.ROYALCARE" />
</resources>